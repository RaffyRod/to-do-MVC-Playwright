{
  "name": "test",
  "version": "1.0.0",
  "description": "TodoMVC Playwright Test Automation with Allure Reporting",
  "main": "index.js",
  "scripts": {
    "test": "node scripts/clean-allure-results.js && playwright test && node scripts/generate-simple-report.js",
    "test:html": "playwright test --reporter=html",
    "test:headed": "playwright test --headed",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "start allure-report/index.html",
    "test:allure": "node scripts/clean-allure-results.js && playwright test && node scripts/generate-simple-report.js && start allure-report/index.html",
    "allure:generate": "node scripts/generate-simple-report.js",
    "allure:open": "node scripts/generate-simple-report.js && start allure-report/index.html",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "npm run type-check && npm run format:check",
    "lint:fix": "npm run format",
    "prepare": "husky"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@playwright/test": "latest",
    "@types/node": "^24.9.1",
    "allure-commandline": "^2.34.1",
    "allure-playwright": "latest",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
